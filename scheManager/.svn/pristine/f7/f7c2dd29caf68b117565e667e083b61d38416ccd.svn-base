@charset "UTF-8";

/* base */
html, body { margin: 0; height: 100%; overflow-x: hidden; }
.wrap { height: 100%; }
.wrapper { padding-top: 10px !important; }
#thisTitle { color: #000; }
#smTitle { color: #337ab7; }
.this-sm-title-div { background-color: #fbfbfb; padding: 1px; border-radius: 9px; text-indent: 10px; box-shadow:1px 1px 1px #e0dfdf; }
p{margin:0;}
/* menu scroll */
.sidebar-menu { overflow-y: scroll; overflow-style: none; height: 100%; }
::-webkit-scrollbar {display:none;}

/* menu */
.userImg { width: 80px; height: 80px; object-fit: cover; }


/* contents */
#main-content { height: calc(100% - 70px); background-color: #ffffff; }


/* footer */
@media ( min-width : 767px ) {
	footer { position: relative; width: calc(100% - 210px); left: 210px; bottom: 0px; z-index: 100; }
}

@media ( max-width: 767px  ) {
	footer { position: relative; width: 100%; bottom: 0px; z-index: 100; }
}

/* Text 정렬 */
.tl { text-align: left !important; }
.tc { text-align: center !important; }
.tr { text-align: right !important; }

/* float 정렬 */
.fl { float: left; }
.fr { float: right; }
.fn { float: none; }

/* 버튼 관련 */
.btn-panel{margin-top:20px;margin-bottom:10px;}

/* outline button */
.btn-outline-primary { background-color: transparent !important; color: #337ab7; border-color: #337ab7; }
.btn-outline-primary:hover { background-color: #337ab7 !important; color: #FFF; border-color: #337ab7; }
.btn-secondary { color: #fff; background-color: #6c757d; border-color: #6c757d; }
.btn-outline-secondary { background-color: transparent !important; color: #6c757d; border-color: #6c757d; }
.btn-outline-secondary:hover { background-color: #6c757d !important; color: #FFF; border-color: #6c757d; }
.btn-outline-success { background-color: transparent !important; color: #28a745; border-color: #28a745; }
.btn-outline-success:hover { background-color: #28a745 !important; color: #FFF; border-color: #28a745; }
.btn-outline-info { background-color: transparent !important; color: #17a2b8; border-color: #17a2b8; }
.btn-outline-info:hover { background-color: #17a2b8 !important; color: #FFF; border-color: #17a2b8; }
.btn-outline-warning { background-color: transparent !important; color: #ffc107; border-color: #ffc107; }
.btn-outline-warning:hover { background-color: #ffc107 !important; color: #FFF; border-color: #ffc107; }
.btn-outline-danger { background-color: transparent !important; color: #dc3545; border-color: #dc3545; }
.btn-outline-danger:hover { background-color: #dc3545 !important; color: #FFF; border-color: #dc3545; }
.btn-dark { color: #fff; background-color: #2c3033; border-color: #1d2124; }
.btn-dark:hover { background-color: #23272b; color: #FFF; }
.btn-outline-dark { background-color: transparent !important; color: #343a40; border-color: #343a40; }
.btn-outline-dark:hover { background-color: #343a40 !important; color: #FFF; border-color: #343a40; }
.btn-light { color: #212529; background-color: #eee; border-color: #dae0e5; }
.btn-outline-light { background-color: transparent; color: #343a40; border-color: #f8f9fa; }
.btn-outline-light:hover { background-color: #eee; border-color: #f8f9fa; }
.btn-link { color: #007bff; }

/* 커서 포인터 */
.pointer{cursor:pointer;}

