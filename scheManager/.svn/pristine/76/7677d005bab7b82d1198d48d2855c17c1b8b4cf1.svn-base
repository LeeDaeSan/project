@charset "UTF-8";

/* base */
html, body { margin: 0; height: 100%; overflow-x: hidden; }
.wrap { height: 100%; }
.wrapper { padding-top: 10px !important; }
#thisTitle { color: #000; }
#smTitle { color: #337ab7; }
.this-sm-title-div { background-color: #FFF; padding: 1px; border-radius: 9px; text-indent: 10px; box-shadow: 2px 2px 2px #e0dfdf; }

/* menu scroll */
.sidebar-menu { overflow-y: scroll; overflow-style: none; height: 100%; }
::-webkit-scrollbar {display:none;}

/* menu */
.userImg { width: 80px; height: 80px; object-fit: cover; }


/* contents */
#main-content { height: calc(100% - 70px); background-color: #efefef; }


/* footer */
@media ( min-width : 767px ) {
	footer { position: relative; width: calc(100% - 210px); left: 210px; bottom: 0px; z-index: 100; }
}

@media ( max-width: 767px  ) {
	footer { position: relative; width: 100%; bottom: 0px; z-index: 100; }
}

/* Text 정렬 */
.tl { text-align: left !important; }
.tc { text-align: center !important; }
.tr { text-align: right !important; }

/* float 정렬 */
.fl {float:left;}
.fr {float:right;}

/* 버튼 관련 */
.btn-panel{margin-top:20px;margin-bottom:10px;}

/* 커서 포인터 */
.pointer{cursor:pointer;}

